<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/Black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingsTheme" parent="LightTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="MyTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/White</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>


    <style name="LightTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">#000000</item>
        <item name="android:colorBackground">#F5F5F5</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:colorBackground">#4b4b4b</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
    </style>
</resources>
