<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/Black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingsTheme" parent="LightSettingsTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="MyTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/White</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>


    <style name="LightTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#868686</item>
        <item name="colorAccent">#ff7e3d</item>
        <item name="android:windowAnimationStyle">@style/activity_animation_fade</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">#F5F5F5</item>
        <item name="android:navigationBarDividerColor">#000000</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:colorBackground">#F5F5F5</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:colorBackground">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ff7e3d</item>
        <item name="android:windowAnimationStyle">@style/activity_animation_fade</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:actionMenuTextColor">@color/Black</item>
    </style>

    <style name="LightSettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#868686</item>
        <item name="colorAccent">#ff7e3d</item>
        <item name="android:windowAnimationStyle">@style/activity_animation_fade</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">#F5F5F5</item>
        <item name="android:navigationBarDividerColor">#000000</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:colorBackground">#F5F5F5</item>

    </style>

    <style name="DarkSettingsTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ff7e3d</item>
        <item name="android:windowAnimationStyle">@style/activity_animation_fade</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:actionMenuTextColor">@color/Black</item>
    </style>

    <style
        name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <style
        name="activity_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/fade_in_activity</item>
        <item name="android:windowExitAnimation">@anim/fade_out_activity</item>
    </style>
</resources>
