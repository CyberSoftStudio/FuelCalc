<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linear_layout"

    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:orientation="horizontal"

        android:padding="2dp">

        <TextView
            android:id="@+id/fuelName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Gasoline"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fuelVol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="right"
            android:text="27.9"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/unit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.15"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="l"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:onClick="onClickExpandButton"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_expand_more_24px"
            android:background="@color/invisible"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/additional_info"
        android:paddingLeft="26dp"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/caloricity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/Black"
            android:text="Caloricity:   "
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/price"
            android:textColor="@color/Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Price:    "
            android:layout_gravity="center"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Delete fuel"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:onClick="onClickDeleteBtn"/>
    </LinearLayout>

</LinearLayout>